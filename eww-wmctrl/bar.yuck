(defwidget bar0 []
  (centerbox :orientation "h"
    (workspaces0)
    (title)
    (right)))

(defwidget bar1 []
  (centerbox :orientation "h"
    (workspaces1)
    (title)
    (right)))

(defwindow bar0
  :monitor 0
  :windowtype "dock"
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "100%"
                      :height "10px"
                      :anchor "top center")
  :reserve (struts :side "top" :distance "5%")
  (bar0))

(defwindow bar1
  :monitor 1
  :windowtype "dock"
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "100%"
                      :height "10px"
                      :anchor "top center")
  :reserve (struts :side "top" :distance "5%")
  (bar1))

